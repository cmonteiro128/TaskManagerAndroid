<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context="com.ripta.android.ui.splash.SplashFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="32"
        android:gravity="center_horizontal|center">

        <ImageView
            android:id="@+id/splash_center_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="7dp"
            android:contentDescription="@null"
            android:padding="5dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="68"
        android:orientation="vertical">

        <TextView
            android:id="@+id/splash_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginEnd="@dimen/splash_text_margin"
            android:layout_marginLeft="@dimen/splash_text_margin"
            android:layout_marginRight="@dimen/splash_text_margin"
            android:layout_marginStart="@dimen/splash_text_margin"
            android:textColor="@color/generic_white"
            android:textSize="@dimen/splash_title_text_size" />

        <TextView
            android:id="@+id/splash_description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginEnd="@dimen/splash_text_margin"
            android:layout_marginLeft="@dimen/splash_text_margin"
            android:layout_marginRight="@dimen/splash_text_margin"
            android:layout_marginStart="@dimen/splash_text_margin"
            android:layout_marginTop="14dp"
            android:textColor="@color/generic_white"
            android:textSize="@dimen/splash_description_text_size" />

    </LinearLayout>
</LinearLayout>
